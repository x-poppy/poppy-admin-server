{
  "name": "@x-poppy/web-server",
  "version": "0.0.1",
  "main": "dist/main.js",
  "scripts": {
    "start": "nodemon --exec 'npm run apidoc && ts-node -r tsconfig-paths/register ./src/main.ts --files'",
    "prebuild": "rimraf dist",
    "build": "npm run apidoc && tsc --build ./tsconfig.json",
    "postbuild": "copyfiles config/** locales/** package.json package-lock.json dist && cp -R public dist",
    "lint": "eslint src --ext .ts",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "apidoc": "rimraf public/apidoc && apidoc -i src/ -t apidoc/template -f \".*\\.ts$\" -o public/apidoc",
    "prepare": "husky install",
    "changelog:first": "standard-changelog -f",
    "changelog": "standard-changelog"
  },
  "files": [
    "dist"
  ],
  "author": "X-Poppy",
  "license": "MIT",
  "dependencies": {
    "@augejs/axios": "^1.2.6",
    "@augejs/core": "^1.0.6",
    "@augejs/file-config": "^1.2.6",
    "@augejs/i18n": "^1.2.6",
    "@augejs/koa": "^1.2.6",
    "@augejs/koa-bodyparser": "^1.0.10",
    "@augejs/koa-error-handle": "1.0.3",
    "@augejs/koa-security": "^1.0.10",
    "@augejs/koa-static": "^1.0.10",
    "@augejs/log4js": "^1.2.6",
    "@augejs/mail": "^1.2.6",
    "@augejs/typeorm": "1.2.6",
    "@augejs/views": "^1.2.6",
    "mysql": "^2.18.1",
    "nodejs-snowflake": "^1.5.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "commitlint": "^12.1.1",
    "conventional-changelog-cli": "^2.1.1",
    "copyfiles": "^2.4.1",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^8.2.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "standard-changelog": "^2.0.27",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0"
  }
}
