{
  "name": "@hmpay/channel",
  "version": "0.0.1",
  "main": "dist/main.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "npm run apidoc && ts-node -r tsconfig-paths/register ./src/main.ts --files",
    "prebuild": "rimraf dist",
    "build": "npm run apidoc && tsc --build ./tsconfig.json",
    "postbuild": "copyfiles config/** locales/** package.json package-lock.json dist && cp -R public dist",
    "lint": "echo lint",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "apidoc": "rimraf public/apidoc && apidoc -i src/ -t apidoc/template -f \".*\\.ts$\" -o public/apidoc"
  },
  "apidoc": {
    "title": "HMPay Channel API document",
    "header": {
      "title": "HMPay Channel API document",
      "filename": "./apidoc/header.md"
    },
    "footer": {
      "filename": "./apidoc/footer.md"
    }
  },
  "files": [
    "dist"
  ],
  "author": "Alex.Zhang",
  "license": "MIT",
  "dependencies": {
    "@augejs/axios": "1.0.2-rc.8",
    "@augejs/file-config": "1.0.2-rc.8",
    "@augejs/i18n": "1.0.2-rc.6",
    "@augejs/koa": "1.0.2-rc.8",
    "@augejs/koa-bodyparser": "1.0.2-rc.2",
    "@augejs/koa-error-handle": "^1.0.2-rc.4",
    "@augejs/koa-security": "1.0.2-rc.2",
    "@augejs/koa-static": "1.0.2-rc.2",
    "@augejs/module-core": "1.0.2-rc.4",
    "@augejs/views": "1.0.2-rc.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.20",
    "apidoc": "^0.26.0",
    "commitlint": "^11.0.0",
    "conventional-changelog-cli": "^2.1.1",
    "copyfiles": "^2.4.1",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "gh-pages": "^3.1.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "prettier": "2.1.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".test.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
